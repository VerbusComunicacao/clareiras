{
  "id": "video_post",
  "label": "Vídeo",
  "format": "custom",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Título",
          "placeholder": "Título do vídeo",
          "allowTargetBlank": true,
          "single": "heading1"
        }
      },
      "uid": {
        "type": "UID",
        "config": {
          "label": "Slug",
          "placeholder": "titulo-do-video"
        }
      },
      "youtube_url": {
        "type": "Embed",
        "config": {
          "label": "URL do Vídeo (YouTube)",
          "placeholder": "https://www.youtube.com/watch?v=..."
        }
      },
      "date": {
        "type": "Date",
        "config": {
          "label": "Data de Publicação",
          "placeholder": ""
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "type": "Text",
        "config": {
          "label": "Meta Title",
          "placeholder": "Título para redes sociais e buscadores"
        }
      },
      "meta_description": {
        "type": "Text",
        "config": {
          "label": "Meta Description",
          "placeholder": "Resumo do vídeo"
        }
      },
      "meta_image": {
        "type": "Image",
        "config": {
          "label": "Meta Image",
          "constraint": {
            "width": 2400,
            "height": 1260
          },
          "thumbnails": []
        }
      }
    }
  }
}
